@using System.Text.Json
@using SportsStore.Models
@{
    var username = Context.Session.GetString("username");
    var userRole = Context.Session.GetString("role");
    var token = Context.Session.GetString("token");
    
    // Lấy thông tin giỏ hàng
    int cartQty = 0;
    var cartJson = Context.Session.GetString("Cart");
    Cart cart = null;
    
    if (!string.IsNullOrEmpty(cartJson))
    {
        cart = JsonSerializer.Deserialize<Cart>(cartJson);
        cartQty = cart?.Lines.Sum(x => x.Quantity) ?? 0;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Thêm Font Awesome cho biểu tượng giỏ hàng -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet">
</head>
<body>
<!-- Trong phần navbar, thêm sau giỏ hàng -->
@if (!string.IsNullOrEmpty(username))
{
    <li class="nav-item">
        <a class="nav-link text-success" asp-controller="Account" asp-action="UserInfo">
            Xin chào: @username
        </a>
    </li>

    @if (userRole == "Admin")
    {
        <li class="nav-item">
            <a class="nav-link text-warning" asp-controller="Account" asp-action="UserList">
                [Admin] Quản lý người dùng
            </a>
        </li>
    }
    
    <li class="nav-item">
        <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
            <button type="submit" class="btn btn-link nav-link text-dark">Đăng xuất</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Đăng nhập</a>
    </li>
}
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">SPORTS STORE</div>
                <div class="col-6 navbar-text text-end">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:navigation-menu />
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>